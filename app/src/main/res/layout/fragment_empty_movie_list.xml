<?xml version="1.0" encoding="utf-8"?>
<layout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools">

    <data>
        <variable name="alias" type="String"/>
    </data>

    <androidx.constraintlayout.widget.ConstraintLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        tools:context=".ui.states.EmptyMoviesListFragment">

        <ImageView
            android:id="@+id/ic_search"
            android:src="@drawable/ic_big_search"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toTopOf="parent"
            style="@style/empty_fragment_ic_search" />

        <TextView
            android:id="@+id/tv_emptySearch"
            app:layout_constraintEnd_toEndOf="@+id/ic_search"
            app:layout_constraintStart_toStartOf="@+id/ic_search"
            app:layout_constraintTop_toBottomOf="@+id/ic_search"
            android:text="@{@string/alias_text(alias)}"
            style="@style/empty_fragment_text" />

    </androidx.constraintlayout.widget.ConstraintLayout>
</layout>